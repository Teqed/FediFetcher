name: Deploy on Dependabot PR

on:
  pull_request:
    types:
      - opened
      - synchronize
    branches:
      - dependabot/**

jobs:
  check_concurrency:
    runs-on: ubuntu-latest
    steps:
      - name: Wait for concurrency
        id: concurrency
        run: |
          while true; do
            echo "Waiting for previous job in get_context concurrency group to complete..."
            sleep 10
            if [[ "$(curl -s -X GET -u ${{ secrets.GITHUB_TOKEN }} \
              "https://api.github.com/repos/${{ github.repository }}/actions/runs?event=workflow_dispatch&status=completed&conclusion=success" \
              | jq '.workflow_runs | length')" == "0" ]]; then
              echo "Concurrency check complete."
              break
            fi
          done

  deploy:
    needs: check_concurrency
    runs-on: ubuntu-latest
    environment: mastodon
    steps:
      - name: Checkout original repository
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
          ref: ${{ github.event.pull_request.head.ref }}
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
         python-version: '3.11'
         cache: 'pip' # caching pip dependencies
      - run: pip install -r requirements.txt
      - name: Download all workflow run artifacts
        uses: dawidd6/action-download-artifact@v2
        with:
          name: artifacts
          workflow: get_context.yml
          if_no_artifact_found: warn
          path: artifacts
      - name: Get Directory structure
        run: ls -lR
      - run: python find_posts.py --lock-hours=0 --access-token=${{ secrets.ACCESS_TOKEN }} -c="./config.json"
      - name: Upload artifacts
        uses: actions/upload-artifact@v3
        with:
          name: artifacts
          path: |
            artifacts
      - name: Checkout user's forked repository for keeping workflow alive
        uses: actions/checkout@v3
      - name: Keep workflow alive
        uses: gautamkrishnar/keepalive-workflow@v1